<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                app:contentInsetStart="@dimen/dp0"
                app:layout_scrollFlags="scroll|enterAlways|snap"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/toolbar_skyCon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp16"
                        android:src="@drawable/forecast_card_icon_warning_cold"/>

                    <TextView
                        android:id="@+id/toolbar_temperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/toolbar_skyCon"
                        android:text="26°"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_20"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp6"
                        android:layout_toEndOf="@+id/toolbar_temperature"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/toolbar_position"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="当前位置"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_10"/>

                        <TextView
                            android:id="@+id/toolbar_proposal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="出行建议"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_10"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/toolbar_StepCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/semi_ellipse"
                        android:text="当前步数：1000"
                        android:textColor="@color/white"/>

                </RelativeLayout>

            </android.support.v7.widget.Toolbar>


        </android.support.design.widget.AppBarLayout>

    </android.support.design.widget.CoordinatorLayout>

</FrameLayout>