<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="qucikRunTheme" format="color" />
    <attr name="qucikRunStatus" format="color"/>
    <attr name="qucikRunColorAccent" format="color"/>
    <attr name="qucikRunBackground" format="color" />
    <attr name="qucikRunViewBackground" format="color" />
    <attr name="qucikRunDrawerBackground" format="color" />
    <attr name="qucikRunFloatBtn" format="color" />
    <attr name="qucikRunToolbarText" format="color" />

    <declare-styleable name="SettingItemView">
        <attr name="icon" format="reference" />
        <attr name="title" format="string" />
        <attr name="description" format="string" />
        <attr name="type" format="enum">
            <enum name="none" value="0" />
            <enum name="switcher" value="1" />
            <enum name="checkbox" value="2" />
        </attr>
    </declare-styleable>


    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension"/>
        <attr name="border_color" format="color"/>
    </declare-styleable>


    <declare-styleable name="StepCircleView">
        <!-- 圆的半径 -->
        <attr name="min_circle_radio" format="integer"/>
        <!-- 圆环的宽度 -->
        <attr name="ring_width" format="float"/>
        <!-- 分成几段 -->
        <attr name="select" format="integer"/>
        <!-- 每段间隔的角度 -->
        <attr name="selec_angle" format="integer"/>
        <!-- 圆的颜色 -->
        <attr name="circle_color" format="color"/>
        <!-- 圆的颜色 -->
        <attr name="max_circle_color" format="color"/>
        <!-- 圆环的默认颜色 -->
        <attr name="ring_normal_color" format="color"/>
        <!-- 圆环要显示的彩色的区域-->
        <attr name="ring_color_select" format="integer"/>
        <!-- 是否显示断 -->
        <attr name="is_show_select" format="boolean"/>
    </declare-styleable>
</resources>
